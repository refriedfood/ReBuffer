{
  "manifest_version": 2,
  "name": "ReBuffer",
  "short_name": "ReBuffer",
  "author": "refried",
  "version": "0.1",
  "description": "Reload a webpage automatically when an HTML5 video buffers.",
  "permissions": [
    "tabs",
    "storage",
    "contextMenus"
  ],
  "background": {
    "scripts": ["background.js"]
  },
  "icons": {
    "16": "icons/rebuffer_16.png",
    "32": "icons/rebuffer_32.png",
    "48": "icons/rebuffer_48.png",
    "64": "icons/rebuffer_64.png",
    "128": "icons/rebuffer_128.png"
  },
  "browser_action": {
    "default_title": "ReBuffer",
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icons/rebuffer_16.png",
      "32": "icons/rebuffer_32.png",
      "48": "icons/rebuffer_48.png",
      "64": "icons/rebuffer_64.png",
      "128": "icons/rebuffer_128.png"
    }
  },
  "options_ui": {
    "page": "popup.html",
    "browser_style": false
  },
  "content_scripts": [
    {
      "matches": ["*://*/*"],
      "js": ["content.js"],
      "run_at": "document_idle",
      "all_frames": true
    }
  ]
}
